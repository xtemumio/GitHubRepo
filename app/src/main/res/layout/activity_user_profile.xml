<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Contenuto principale della schermata (LinearLayout con Toolbar e RelativeLayout) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar in alto -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/userProfileToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            app:title="Profilo Utente"
            app:titleTextColor="@android:color/white" />

        <!-- Layout per il contenuto del profilo utente -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <!-- Immagine del profilo utente -->
            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/user_menu"
                android:contentDescription="@string/user_profile_image" />

            <!-- Nome dell'utente -->
            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profileImage"
                android:layout_marginTop="16dp"
                android:layout_centerHorizontal="true"
                android:text="Nome utente"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Altri dettagli dell'utente -->
            <TextView
                android:id="@+id/userBio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/userName"
                android:layout_marginTop="8dp"
                android:layout_centerHorizontal="true"
                android:text="Bio dell'utente"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/userCompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/userBio"
                android:layout_marginTop="8dp"
                android:layout_centerHorizontal="true"
                android:text="Azienda"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/userLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/userCompany"
                android:layout_marginTop="8dp"
                android:layout_centerHorizontal="true"
                android:text="LocalitÃ "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/userPublicRepos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/userLocation"
                android:layout_marginTop="8dp"
                android:layout_centerHorizontal="true"
                android:text="Repository pubblici: 0"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

    <!-- NavigationView per il menu laterale -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>