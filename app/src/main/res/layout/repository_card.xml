<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="250dp"
    android:background="@drawable/card_background"
    android:padding="8dp"
    android:layout_margin="8dp"
    android:layout_gravity="center">

    <!-- Titolo del repository -->
    <TextView
        android:id="@+id/repoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="40dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"/>

    <!-- Pulsante Info in alto a destra della card -->
    <Button
        android:id="@+id/infoButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/info_button"
        android:contentDescription="@string/info_button_description"
        android:layout_margin="4dp" />

    <!-- Descrizione del repository -->
    <TextView
        android:id="@+id/repoDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/repoTitle"
        android:layout_marginTop="4dp"
        android:textSize="14sp"
        android:textColor="@android:color/white"/>

    <!-- Linguaggio principale del repository -->
    <TextView
        android:id="@+id/repoLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/repoDescription"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:textColor="@android:color/white"/>

    <!-- Numero di stelle del repository -->
    <LinearLayout
        android:id="@+id/starsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp" />

</RelativeLayout>